<h1><%= title %></h1>
<br>

<form method="POST" action="">
  <div class="form-group">
    <label for="name">Category Name:</label>
    <input type="text" id="name" class="form-control" placeholder="Enter category name" name="name" value="<%= typeof category === 'undefined' ? '' : category.name %>">
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    <textarea id="description" class="form-control" placeholder="Enter category description" name="description"><%= typeof category === 'undefined' ? '' : category.description %></textarea>
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>

<% if (typeof errors !== 'undefined') { %>
  <ul>
    <% errors.forEach(function(error) { %>
      <li><%= error.msg %></li>
    <% }); %>
  </ul>
<% } %>
